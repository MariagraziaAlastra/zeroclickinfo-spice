<div class="detail__media  detail__media--pr">
  <img class="detail__media__img" src={{img}}>
</div>
<div class="detail__body  detail__body--pr">
    <div class="detail__body__content">
        <a href="http://www.amazon.com"><h5 class="detail__title detail__tile--pr ">{{description}}</h5></a>
        <p class="detail__subtitle">
            <span class="detail__price  price">{{price}}</span>
        </p>

        <p class="detail__desc">

        </p>

        <span class="detail__callout">
           Use code: <input class="tag" readonly="true" value="{{code}}">
       </span>
    </div>
</div>